# API Configuration
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE
ANTHROPIC_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=12000
TEMPERATURE=0.7

# Generation Settings - AUGMENTER DRASTIQUEMENT
MAX_GENERATION_TIME=900000  # 15 minutes au lieu de 3
STEP1_TIMEOUT=180000  # 3 minutes pour architecture
STEP2_TIMEOUT=840000  # 14 minutes pour génération code
API_CLIENT_TIMEOUT=720000  # 12 minutes timeout client (NOUVEAU)
RETRY_ATTEMPTS=0  # AUCUN RETRY - CRITIQUE !
RETRY_DELAY=10000  # 10 secondes entre retries

# Token Management (NOUVEAU)
MAX_TOKENS_STEP1=3000  # Architecture avec température 0.4
MAX_TOKENS_STEP2=10000  # Code génération divisée en 3 étapes
ENABLE_STREAMING=true  # Évite les timeouts client

# File Management
KEEP_GENERATIONS_DAYS=7
MAX_GENERATIONS_PER_DAY=50
AUTO_CLEANUP=true

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Unsplash API
UNSPLASH_ACCESS_KEY=YOUR-UNSPLASH-KEY-HERE
UNSPLASH_PER_PAGE=30
UNSPLASH_QUALITY=regular  # thumb, small, regular, full
