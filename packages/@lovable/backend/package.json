{
  "name": "@lovable/backend",
  "version": "1.0.0",
  "description": "Supabase backend integration for authentication, database, and storage",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./src/index.js",
      "types": "./src/index.ts"
    },
    "./auth": {
      "import": "./src/auth-service.js",
      "types": "./src/auth-service.ts"
    },
    "./projects": {
      "import": "./src/projects-service.js",
      "types": "./src/projects-service.ts"
    },
    "./storage": {
      "import": "./src/storage-service.js",
      "types": "./src/storage-service.ts"
    },
    "./client": {
      "import": "./src/supabase-client.js",
      "types": "./src/supabase-client.ts"
    }
  },
  "files": [
    "src",
    "database.sql",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node src/test.js",
    "demo": "node src/demo.js",
    "validate": "node -c src/index.ts",
    "dev": "node --watch src/test.js",
    "build": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write src/**/*.{ts,js}",
    "db:setup": "echo 'Run database.sql in your Supabase SQL editor'",
    "db:migrate": "supabase db reset",
    "db:types": "supabase gen types typescript --local > src/database.types.ts",
    "types": "npm run db:types"
  },
  "keywords": [
    "supabase",
    "backend",
    "authentication",
    "database",
    "storage",
    "auth",
    "postgresql",
    "realtime",
    "api",
    "baas",
    "backend-as-a-service",
    "user-management",
    "file-storage",
    "project-management",
    "credits",
    "subscriptions",
    "rls",
    "row-level-security"
  ],
  "author": "Lovable",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "supabase": "^1.0.0"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lovable-dev/app-generator.git",
    "directory": "packages/@lovable/backend"
  },
  "bugs": {
    "url": "https://github.com/lovable-dev/app-generator/issues"
  },
  "homepage": "https://github.com/lovable-dev/app-generator/tree/main/packages/@lovable/backend#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/lovable-dev"
  },
  "supabase": {
    "projectId": "your-project-id",
    "apiUrl": "https://your-project.supabase.co",
    "anonKey": "your-anon-key"
  }
}